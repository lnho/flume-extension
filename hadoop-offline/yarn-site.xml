            <value>false</value>
            <final>true</final>
        </property>
        <property>
            <name>yarn.scheduler.fair.max.assign</name>
            <value>-1</value>
            <final>true</final>
        </property>
        <property>
            <name>yarn.scheduler.fair.locality.threshold.node</name>
            <value>-1.0</value>
            <final>true</final>
        </property>
        <property>
            <name>yarn.scheduler.fair.locality.threshold.rack</name>
            <value>-1.0</value>
            <final>true</final>
        </property>
</configuration>

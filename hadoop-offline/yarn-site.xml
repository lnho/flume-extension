                <name>yarn.nodemanager.log-dirs</name>
                <value>file:///data0/yarn/logs,file:///data1/yarn/logs,file:///data2/yarn/logs,file:///data3/yarn/logs,file:///data4/yarn/logs,file:///data5/yarn/logs,file:///data6/yarn/logs,file:///data7/yarn/logs,file:///data8/yarn/logs,file:///data9/yarn/logs,file:///data10/yarn/logs,file:///data11/yarn/logs</value>
